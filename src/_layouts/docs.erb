---
layout: default
---

<div class="docs-page">
  <aside class="docs-sidebar" id="docs-sidebar">
    <button
      class="docs-sidebar-toggle"
      id="docs-sidebar-toggle"
      aria-expanded="false"
      aria-controls="docs-nav-inner"
    >
      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
        <path d="M2 4h12M2 8h12M2 12h12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
      </svg>
      Documentation
      <svg width="13" height="13" viewBox="0 0 13 13" fill="none" style="margin-left:auto;transition:transform 0.2s" id="docs-toggle-chevron" aria-hidden="true">
        <path d="M2.5 4.5l4 4 4-4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>

    <div class="docs-nav-inner" id="docs-nav-inner">
      <nav aria-label="Documentation">

        <div class="docs-nav-group">
          <span class="docs-nav-group-label">Introduction</span>
          <ul class="docs-nav-list">
            <li>
              <a href="<%= relative_url '/docs' %>"
                 class="<%= data.docs_section == 'overview' ? 'docs-nav-active' : '' %>">
                Overview
              </a>
            </li>
            <li>
              <a href="<%= relative_url '/docs/getting-started' %>"
                 class="<%= data.docs_section == 'getting-started' ? 'docs-nav-active' : '' %>">
                Getting Started
              </a>
            </li>
          </ul>
        </div>

        <div class="docs-nav-group">
          <span class="docs-nav-group-label">Core Features</span>
          <ul class="docs-nav-list">
            <li>
              <a href="<%= relative_url '/docs/adding-words' %>"
                 class="<%= data.docs_section == 'adding-words' ? 'docs-nav-active' : '' %>">
                Adding Words
              </a>
            </li>
            <li>
              <a href="<%= relative_url '/docs/flashcard-types' %>"
                 class="<%= data.docs_section == 'flashcard-types' ? 'docs-nav-active' : '' %>">
                Flashcard Types
              </a>
            </li>
            <li>
              <a href="<%= relative_url '/docs/generating-flashcards' %>"
                 class="<%= data.docs_section == 'generating-flashcards' ? 'docs-nav-active' : '' %>">
                Generating Flashcards
              </a>
            </li>
            <li>
              <a href="<%= relative_url '/docs/quick-notes' %>"
                 class="<%= data.docs_section == 'quick-notes' ? 'docs-nav-active' : '' %>">
                Quick Notes
              </a>
            </li>
            <li>
              <a href="<%= relative_url '/docs/review-sessions' %>"
                 class="<%= data.docs_section == 'review-sessions' ? 'docs-nav-active' : '' %>">
                Review Sessions
              </a>
            </li>
            <li>
              <a href="<%= relative_url '/docs/spaced-repetition' %>"
                 class="<%= data.docs_section == 'spaced-repetition' ? 'docs-nav-active' : '' %>">
                Spaced Repetition
              </a>
            </li>
            <li>
              <a href="<%= relative_url '/docs/statistics' %>"
                 class="<%= data.docs_section == 'statistics' ? 'docs-nav-active' : '' %>">
                Statistics
              </a>
            </li>
            <li>
              <a href="<%= relative_url '/docs/word-sources' %>"
                 class="<%= data.docs_section == 'word-sources' ? 'docs-nav-active' : '' %>">
                Word Sources
              </a>
            </li>
            <li>
              <a href="<%= relative_url '/docs/word-triage' %>"
                 class="<%= data.docs_section == 'word-triage' ? 'docs-nav-active' : '' %>">
                Word Triage
              </a>
            </li>
            <li>
              <a href="<%= relative_url '/docs/word-filters' %>"
                 class="<%= data.docs_section == 'word-filters' ? 'docs-nav-active' : '' %>">
                Word Filters
              </a>
            </li>
          </ul>
        </div>

        <div class="docs-nav-group">
          <span class="docs-nav-group-label">API Usage</span>
          <ul class="docs-nav-list">
            <li>
              <a href="<%= relative_url '/docs/open-router' %>"
                 class="<%= data.docs_section == 'open-router' ? 'docs-nav-active' : '' %>">
                OpenRouter
              </a>
            </li>
            <li>
              <a href="<%= relative_url '/docs/unsplash' %>"
                 class="<%= data.docs_section == 'unsplash' ? 'docs-nav-active' : '' %>">
                Unsplash
              </a>
            </li>
          </ul>
        </div>

        <div class="docs-nav-group">
          <span class="docs-nav-group-label">Languages</span>
          <ul class="docs-nav-list">
            <li>
              <a href="<%= relative_url '/docs/supported-languages' %>"
                 class="<%= data.docs_section == 'supported-languages' ? 'docs-nav-active' : '' %>">
                Supported Languages
              </a>
            </li>
          </ul>
        </div>

        <div class="docs-nav-group">
          <span class="docs-nav-group-label">Import &amp; Export</span>
          <ul class="docs-nav-list">
            <li>
              <a href="<%= relative_url '/docs/anki' %>"
                 class="<%= data.docs_section == 'anki' ? 'docs-nav-active' : '' %>">
                Anki
              </a>
            </li>
            <li>
              <a href="<%= relative_url '/docs/csv' %>"
                 class="<%= data.docs_section == 'csv' ? 'docs-nav-active' : '' %>">
                CSV
              </a>
            </li>
          </ul>
        </div>

        <div class="docs-nav-group">
          <span class="docs-nav-group-label">Reference</span>
          <ul class="docs-nav-list">
            <li>
              <a href="<%= relative_url '/docs/settings' %>"
                 class="<%= data.docs_section == 'settings' ? 'docs-nav-active' : '' %>">
                Settings &amp; Preferences
              </a>
            </li>
            <li>
              <a href="<%= relative_url '/docs/privacy-data' %>"
                 class="<%= data.docs_section == 'privacy-data' ? 'docs-nav-active' : '' %>">
                Privacy &amp; Data
              </a>
            </li>
          </ul>
        </div>

      </nav>
    </div>
  </aside>

  <main class="docs-content" id="main-content">
    <%= yield %>
  </main>
</div>

<script>
  (function () {
    var toggle = document.getElementById('docs-sidebar-toggle');
    var sidebar = document.getElementById('docs-sidebar');
    var chevron = document.getElementById('docs-toggle-chevron');

    if (toggle && sidebar) {
      toggle.addEventListener('click', function () {
        var isOpen = sidebar.classList.toggle('is-open');
        toggle.setAttribute('aria-expanded', isOpen);
        if (chevron) {
          chevron.style.transform = isOpen ? 'rotate(180deg)' : 'rotate(0deg)';
        }
      });
    }
  })();
</script>
