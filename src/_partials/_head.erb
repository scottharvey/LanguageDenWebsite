<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<% resource_title = strip_html(strip_newlines(title)) %>
<% is_homepage = resource_title == "Index" %>
<% page_description = data.description || metadata.description %>
<% if is_homepage %>
<title><%= metadata.title %> &mdash; <%= metadata.tagline %></title>
<% else %>
<title><%= resource_title %> | <%= metadata.title %></title>
<% end %>

<meta name="description" content="<%= page_description %>" />
<meta name="author" content="<%= metadata.title %>" />
<link rel="canonical" href="<%= site.config.url %><%= resource.relative_url %>" />
<link rel="alternate" type="application/rss+xml" title="<%= metadata.title %> Blog" href="<%= site.config.url %>/blog/feed.xml" />
<link rel="icon" href="/favicon.ico" />

<% if metadata.app_store_id %>
<meta name="apple-itunes-app" content="app-id=<%= metadata.app_store_id %>" />
<% end %>

<!-- Open Graph -->
<meta property="og:type" content="<%= data.layout == 'post' ? 'article' : 'website' %>" />
<% if data.layout == 'post' && data.date %>
<meta property="article:published_time" content="<%= data.date.iso8601 %>" />
<% end %>
<% if is_homepage %>
<meta property="og:title" content="<%= metadata.title %>" />
<% else %>
<meta property="og:title" content="<%= resource_title %> | <%= metadata.title %>" />
<% end %>
<meta property="og:description" content="<%= page_description %>" />
<meta property="og:site_name" content="<%= metadata.title %>" />
<meta property="og:url" content="<%= site.config.url %><%= resource.relative_url %>" />
<% if metadata.og_image %>
<meta property="og:image" content="<%= site.config.url %><%= metadata.og_image %>" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<% end %>

<!-- Twitter / X Card -->
<meta name="twitter:card" content="<%= metadata.og_image ? 'summary_large_image' : 'summary' %>" />
<% if is_homepage %>
<meta name="twitter:title" content="<%= metadata.title %>" />
<% else %>
<meta name="twitter:title" content="<%= resource_title %> | <%= metadata.title %>" />
<% end %>
<meta name="twitter:description" content="<%= page_description %>" />
<% if metadata.og_image %>
<meta name="twitter:image" content="<%= site.config.url %><%= metadata.og_image %>" />
<% end %>

<link rel="stylesheet" href="<%= asset_path :css %>" />
<script src="<%= asset_path :js %>" defer></script>
<%= live_reload_dev_js %>
